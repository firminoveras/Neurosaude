<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/color_foreground"
        android:elevation="4dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gray"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/mWeekTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mWeekSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/mWeekButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D8D8D8"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/mWeekButtonVideo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_panel_ripple"
                        android:drawableTop="@drawable/ic_video"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/video"
                        android:textColor="#808080"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/mWeekButtonText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_panel_ripple"
                        android:drawableTop="@drawable/ic_text"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/text"
                        android:textColor="#808080"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/mWeekButtonAudio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_panel_ripple"
                        android:drawableTop="@drawable/ic_audio"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/audio"
                        android:textColor="#808080"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mWeekPercentVideo"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_ripple"
                        android:backgroundTint="@color/color_foreground"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/zero_percent"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mWeekPercentText"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_ripple"
                        android:backgroundTint="@color/color_foreground"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/zero_percent"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mWeekPercentAudio"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_ripple"
                        android:backgroundTint="@color/color_foreground"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/zero_percent"
                        android:textColor="@color/color_white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/mWeekProgress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:max="300"
            android:progress="50"
            android:progressTint="@color/color_background" />

    </androidx.cardview.widget.CardView>

</FrameLayout>