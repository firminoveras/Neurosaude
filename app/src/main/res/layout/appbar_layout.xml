<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/Main_Bar_Background"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="@dimen/app_bar_height"
        android:alpha=".1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_icon"
        app:tint="@color/color_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/Login_Title"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:drawablePadding="12dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="@string/neurosaude"
            android:textColor="@color/color_white"
            android:textSize="32sp"
            app:drawableStartCompat="@drawable/ic_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:alpha=".3"
                    android:src="@drawable/bg_circle_ripple" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/Main_Bar_UserImageCard"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="200dp">

                    <ImageView
                        android:id="@+id/Main_Bar_UserImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/Main_Bar_UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Main_Bar_UserImageCard"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_button_ripple"
                    android:elevation="2dp"
                    android:fontFamily="sans-serif-light"
                    android:lines="1"
                    android:paddingStart="12dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/color_background"
                    android:textSize="14sp" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/Main_ProgressLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_button_ripple_transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@drawable/bg_button_ripple"
                        android:elevation="1dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/progress"
                        android:textColor="@color/color_background"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Main_Bar_Progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@color/color_background"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_button_ripple_transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@drawable/bg_button_ripple"
                        android:elevation="1dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="Semana"
                        android:textColor="@color/color_background"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:lines="1"
                        android:text="1/4"
                        android:textColor="@color/color_background"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_button_ripple_transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@drawable/bg_button_ripple"
                        android:elevation="1dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="Tempo"
                        android:textColor="@color/color_background"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:lines="1"
                        android:text="1d3h20m"
                        android:textColor="@color/color_background"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>