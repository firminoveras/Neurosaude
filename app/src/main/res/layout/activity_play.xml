<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".PlayActivity"
    tools:ignore="ContentDescription,Overdraw">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".05"
        android:rotation="15"
        android:scaleType="fitStart"
        android:src="@drawable/ic_icon_launcher"
        android:translationX="-60dp"
        app:tint="@color/color_black" />

    <TextView
        android:id="@+id/Player_LoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha=".5"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/loading"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        app:drawableTopCompat="@drawable/ic_download" />

    <TextView
        android:id="@+id/Player_ControlLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha=".3"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/open_controls"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/ic_up"
        app:drawableStartCompat="@drawable/ic_up"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Player_Week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/Player_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Player_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:alpha=".6"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <FrameLayout
                android:id="@+id/Player_VideoPlayerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="12dp"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp">

                    <com.google.android.exoplayer2.ui.StyledPlayerView
                        android:id="@+id/Player_VideoPlayer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:resize_mode="fixed_width"
                        app:use_controller="false" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/Player_AudioPlayerLayout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/Player_PlayButtonBack2"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:alpha=".3"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/color_background2" />

                <ImageView
                    android:id="@+id/Player_PlayButtonBack1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:alpha=".3"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/color_background2" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_ripple"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:padding="18dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/Player_PlayButtonIcon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/color_white"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_audio_play"
                    app:tint="@color/ic_launcher_background" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/Player_TextPlayerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp">

                    <com.github.barteksc.pdfviewer.PDFView
                        android:id="@+id/Player_PDFViewer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

            </FrameLayout>


        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/Player_TimerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Player_Buffering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".3"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_download"
                app:drawableTint="@color/color_gray" />

            <TextView
                android:id="@+id/Player_TimerActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_time"
                app:drawableTint="@color/color_gray" />

            <TextView
                android:id="@+id/Player_TimerTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".3"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray" />

            <TextView
                android:id="@+id/Player_Volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:alpha=".3"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_audio_volume_up"
                app:drawableTint="@color/color_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Text_PagesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Text_PageActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_page"
                app:drawableTint="@color/color_gray" />

            <TextView
                android:id="@+id/Text_PageTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".3"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/Player_ProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="top"
            android:indeterminate="false"
            android:max="1000"
            android:progress="50"
            android:progressDrawable="@drawable/bg_custom_seekbar"
            android:translationY="@dimen/audio_controllayouttop" />

        <LinearLayout
            android:id="@+id/Player_ControlLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_controllayouttop"
            android:layout_gravity="bottom"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_bg_layout_thic"
            android:backgroundTint="#30FFFFFF"
            android:orientation="horizontal"
            android:translationY="@dimen/audio_controllayouttop">

            <TextView
                android:id="@+id/Player_ControlBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/restart"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_repeat" />

            <TextView
                android:id="@+id/Player_ControlBack30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/back30"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_back_30" />

            <TextView
                android:id="@+id/Player_ControlBack10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/back10"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_back_10" />

            <TextView
                android:id="@+id/Player_ControlBack5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/back5"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_back_5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Player_ControlLayoutMiddle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_controllayoutmiddle"
            android:layout_gravity="bottom"
            android:layout_marginTop="120dp"
            android:background="@drawable/ic_bg_layout_thic"
            android:backgroundTint="#20FFFFFF"
            android:orientation="horizontal"
            android:translationY="@dimen/audio_controllayoutmiddle">

            <TextView
                android:id="@+id/Player_ControlStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/stop"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_stop" />

            <TextView
                android:id="@+id/Player_ControlPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/play"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_play" />

            <TextView
                android:id="@+id/Player_VolumeDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/voldown"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_volume_down" />

            <TextView
                android:id="@+id/Player_VolumeUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/volup"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_volume_up" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Text_ControlLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_controllayouttop"
            android:layout_gravity="bottom"
            android:layout_marginTop="120dp"
            android:background="@drawable/ic_bg_layout_thic"
            android:backgroundTint="#20FFFFFF"
            android:orientation="horizontal"
            android:translationY="@dimen/audio_controllayouttop">

            <TextView
                android:id="@+id/Text_ControlInit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/init"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_init" />

            <TextView
                android:id="@+id/Text_ControlBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/voltar"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_backpage" />

            <TextView
                android:id="@+id/Text_ControlNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/avan_ar"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_nextpage" />

            <TextView
                android:id="@+id/Text_ControlResetZoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/resetzoom"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_zoomreset" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Player_ControlLayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_controllayoutbottom"
            android:layout_gravity="bottom"
            android:layout_marginTop="200dp"
            android:background="@drawable/ic_bg_layout_thic"
            android:backgroundTint="#20FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:translationY="@dimen/audio_controllayoutbottom">

            <TextView
                android:id="@+id/Player_ControlFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center_horizontal|bottom"
                android:text="@string/back"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_back" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>