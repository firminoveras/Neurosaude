<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    tools:context=".VideoPlayActivity"
    tools:ignore="ContentDescription">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".05"
        android:rotation="15"
        android:scaleType="fitStart"
        android:src="@drawable/ic_icon_launcher"
        android:translationX="-60dp"
        app:tint="@color/color_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Video_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/Video_Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Video_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:alpha=".6"
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/Video_ControlLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:id="@+id/Video_TimerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Video_TimerActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_time"
                app:drawableTint="@color/color_gray" />

            <TextView
                android:id="@+id/Video_TimerTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".3"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray" />

            <TextView
                android:id="@+id/Audio_Volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:alpha=".3"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_audio_volume_up"
                app:drawableTint="@color/color_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/Audio_ControlLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:alpha=".3"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/open_controls"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_up"
            app:drawableStartCompat="@drawable/ic_up"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:id="@+id/Audio_ControlLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_controllayouttop"
            android:layout_gravity="bottom"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_bg_layout_thic"
            android:backgroundTint="#30FFFFFF"
            android:orientation="horizontal"
            android:translationY="@dimen/audio_controllayouttop">

            <TextView
                android:id="@+id/Audio_ControlBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/restart"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_repeat" />

            <TextView
                android:id="@+id/Audio_ControlBack30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/back30"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_back_30" />

            <TextView
                android:id="@+id/Audio_ControlBack10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/back10"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_back_10" />

            <TextView
                android:id="@+id/Audio_ControlBack5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/back5"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_back_5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Audio_ControlLayoutMiddle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_controllayoutmiddle"
            android:layout_gravity="bottom"
            android:layout_marginTop="120dp"
            android:background="@drawable/ic_bg_layout_thic"
            android:backgroundTint="#20FFFFFF"
            android:orientation="horizontal"
            android:translationY="@dimen/audio_controllayoutmiddle">

            <TextView
                android:id="@+id/Audio_ControlStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/stop"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_stop" />

            <TextView
                android:id="@+id/Audio_ControlPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/play"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_play" />

            <TextView
                android:id="@+id/Audio_VolumeDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/voldown"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_volume_down" />

            <TextView
                android:id="@+id/Audio_VolumeUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/volup"
                android:textColor="@color/color_gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTint="@color/color_gray"
                app:drawableTopCompat="@drawable/ic_audio_volume_up" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Audio_ControlLayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_controllayoutbottom"
            android:layout_gravity="bottom"
            android:layout_marginTop="200dp"
            android:background="@drawable/ic_bg_layout_thic"
            android:backgroundTint="#20FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:translationY="@dimen/audio_controllayoutbottom">

            <TextView
                android:id="@+id/Audio_ControlFinish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/color_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_back"
                app:drawableTint="@color/color_gray"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>