                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_time"
                        app:drawableTint="@color/color_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-6dp"
                        android:fontFamily="monospace"
                        android:paddingStart="0dp"
                        android:paddingEnd="4dp"
                        android:text="2"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_audio_icon"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio2Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_leaderborder"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio2Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_time"
                        app:drawableTint="@color/color_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-6dp"
                        android:fontFamily="monospace"
                        android:paddingStart="0dp"
                        android:paddingEnd="4dp"
                        android:text="3"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_audio_icon"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio3Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_leaderborder"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio3Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_time"
                        app:drawableTint="@color/color_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-6dp"
                        android:fontFamily="monospace"
                        android:paddingStart="0dp"
                        android:paddingEnd="4dp"
                        android:text="4"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_audio_icon"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio4Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_leaderborder"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio4Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_time"
                        app:drawableTint="@color/color_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-6dp"
                        android:fontFamily="monospace"
                        android:paddingStart="0dp"
                        android:paddingEnd="4dp"
                        android:text="5"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_audio_icon"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio5Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_leaderborder"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio5Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_time"
                        app:drawableTint="@color/color_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-6dp"
                        android:fontFamily="monospace"
                        android:paddingStart="0dp"
                        android:paddingEnd="4dp"
                        android:text="6"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_audio_icon"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio6Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_leaderborder"
                        app:drawableTint="@color/color_background" />

                    <TextView
                        android:id="@+id/WeekViewDetails_Audio6Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/comfortaa"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_background"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_time"
                        app:drawableTint="@color/color_background" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>