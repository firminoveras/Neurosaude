<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".LoginActivity"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/bg_banners" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Login_Logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_icon" />

            <TextView
                android:id="@+id/Login_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/neurosaude"
                android:textColor="@color/color_white"
                android:textSize="32sp" />


            <TextView
                android:id="@+id/Login_Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/subtitle"
                android:textColor="@color/color_white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Login_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_button_ripple"
                android:drawableStart="@drawable/ic_google"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="24dp"
                android:text="@string/login" />


            <Button
                android:id="@+id/Login_Logoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_button_ripple"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/logoff"
                android:textColor="#FF5555"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Login_Info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_github"
                app:tint="@color/color_white"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/Login_Version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="VersÃ£o 1.0"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="@string/info_authors"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="@string/knowmore"
                android:textColor="@color/color_white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/Login_Ripple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".6"
            android:src="@drawable/bg_circle"
            app:tint="@color/color_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".6"
            android:scaleX=".9"
            android:scaleY=".9"
            android:src="@drawable/bg_circle"
            app:tint="@color/color_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:src="@drawable/bg_circle"
            app:tint="@color/color_background" />
    </FrameLayout>

    <ProgressBar
        android:id="@+id/Login_Progress"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:clickable="false"
        android:indeterminate="true"
        android:indeterminateTint="#4D000000"
        android:visibility="gone" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/Login_WelcomeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:visibility="gone">

        <ImageView
            android:id="@+id/Login_Welcome_Background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".05"
            android:rotation="15"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_icon_launcher"
            app:tint="@color/color_black" />

        <ImageView
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_gravity="center"
            android:alpha=".5"
            android:rotation="15"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_circle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/Login_Welcome_Card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="180dp">

            <ImageView
                android:id="@+id/Login_Welcome_UserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".7"
            android:elevation="2dp"
            android:paddingStart="24dp"
            android:paddingTop="4dp"
            android:paddingEnd="24dp"
            android:paddingBottom="80dp"
            android:text="@string/welcome"
            android:textColor="@color/color_white"
            android:textSize="26sp"
            android:textStyle="italic"
            app:layout_anchor="@id/Login_Welcome_Card"
            app:layout_anchorGravity="top|center_horizontal" />

        <TextView
            android:id="@+id/Login_Welcome_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_ripple"
            android:elevation="2dp"
            android:fontFamily="sans-serif-light"
            android:paddingStart="24dp"
            android:paddingTop="4dp"
            android:paddingEnd="24dp"
            android:paddingBottom="4dp"
            android:textColor="@color/color_background"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_anchor="@id/Login_Welcome_Card"
            app:layout_anchorGravity="bottom|center_horizontal" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>