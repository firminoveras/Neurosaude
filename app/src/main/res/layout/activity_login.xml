<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".LoginActivity"
    android:padding="12dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@mipmap/bg_banners" />

    <ImageView
        android:id="@+id/Login_Logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/Login_Title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_icon" />

    <TextView
        android:id="@+id/Login_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif"
        android:text="@string/neurosaude"
        android:textColor="@color/color_white"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/Login_Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_Title"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-thin"
        android:text="@string/subtitle"
        android:textColor="@color/color_white"
        android:textSize="12sp" />

    <Button
        android:id="@+id/Login_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_Subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/bg_button_ripple"
        android:drawableStart="@drawable/ic_google"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:text="@string/login" />

    <Button
        android:id="@+id/Login_Logoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button_ripple"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/logoff"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        android:textSize="12sp"
        android:textColor="#FF5555"/>

    <LinearLayout
        android:id="@+id/Login_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_github"
            app:tint="@color/color_white"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/Login_Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VersÃ£o 1.0"
            android:textColor="@color/color_white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="@string/info_authors"
            android:textColor="@color/color_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="@string/knowmore"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>