<resources>
    <style name="Theme.Neurosaude" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_foreground</item>
        <item name="colorPrimaryDark">@color/color_gray</item>
        <item name="colorAccent">@color/color_background2</item>
        <item name="statusBarBackground">@color/color_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Neurosaude.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>